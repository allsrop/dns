<phpunit verbose="true">
  <testsuites>
    <testsuite name="core">
      <directory suffix="Test.php">test</directory>
    </testsuite>
  </testsuites>
  <logging>
    <log type="coverage-html" target="coverage" charset="UTF-8" />
  </logging>
  <filter>
    <blacklist>
      <directory suffix=".php">vendor</directory>
    </blacklist>
  </filter>
</phpunit>
